@*home/index*@
@model Parkeezzi.ViewModels.ContractorList
@{
    ViewData["Title"] = "Contractors";
}
<div class="container">
    <div class="row">
        <h2>Contractors</h2>
    </div>
    <div class="row">
        @foreach (var contractor in Model.Contractors)
        {
        <a asp-controller="Contractor" asp-action="Index" asp-route-id="@contractor.Id">
            <div class="card s12">
                <div style="float: left; margin-right: 2em; width: 22em;">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">
                                @contractor.Company
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        }
    </div>
</div>
